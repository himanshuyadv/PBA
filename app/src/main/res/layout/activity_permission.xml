<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PermissionActivity"
    android:background="#191515">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/background1"
        android:padding="12dp">
        <TextView
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prominent_disclosure_text"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="296dp"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners_background">
            <CheckBox
                android:id="@+id/permission_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.50"
                android:scaleY="1.50"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#F8F7F7"
                android:textSize="20sp"
                android:text="I Accept the Consent above"/>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnablePermission"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="12dp"
            android:text="@string/enable"
            android:backgroundTint="#05781C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/quit_permission_activity"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cornerRadius="12dp"
            android:text="Quit"
            android:backgroundTint="#6E0B02"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_gravity="center"/>



    </LinearLayout>

</RelativeLayout>